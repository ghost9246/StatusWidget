<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sdamsdam.widget"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <receiver android:name="com.sdamsdam.widget.MyCustomWidget" >
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_configuration" />

            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.sdamsdam.widget.ACTION_EVENT" />
                <action android:name="com.sdamsdam.widget.ACTION_MOVE" />
                <action android:name="com.sdamsdam.widget.ACTION_DOWN" />
                <action android:name="com.sdamsdam.widget.ACTION_UP" />
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
    </application>

    

</manifest>